    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="/assets/styles/vendor.css">
    <link rel="stylesheet" href="/assets/styles/app.css">
  </head>
  <body class="user-background">
    <div class="ceiling-outer"></div>
    <div class="user-sidebar"></div>
    <div class="user-container">
      <form class="form-horizontal user-form" role="form" id="change-pass-form">
        <h2>修改密码</h2>
        <br />
        <div class="form-group">
          <label for="inputEmail3" class="col-sm-4 control-label">原密码</label>
          <div class="col-sm-8">
            <input type="hidden" name="id" id="user-id" />
            <input type="password" class="form-control" name="password" id="old-pass" placeholder="请输入原密码">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-4 control-label">现密码</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" name="newPassword" id="new-pass" placeholder="请输入新密码">
          </div>
        </div>
        <div class="form-group">
          <label for="inputPassword3" class="col-sm-4 control-label">校验密码</label>
          <div class="col-sm-8">
            <input type="password" class="form-control" name="" id="re-pass" placeholder="请再次输入新密码">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <button type="submit" class="btn btn-default btn-lg btn-primary">修改</button>
          </div>
        </div>
      </form>
    </div>
